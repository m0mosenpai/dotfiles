{
    "layer": "top",
    "position": "top",
    "height": 28,
    "spacing": 0,
    "margin-top": 5,
    "margin-left": 5,
    "margin-right": 5,

    "modules-left": ["clock", "hyprland/workspaces"],
    "modules-right": [
        "custom/spotify",
        "custom/spotify-prev",
        "custom/spotify-play-pause",
        "custom/spotify-next",
        "custom/pulseaudio-input",
        "pulseaudio",
        "disk",
        "memory",
        "cpu",
        "network",
        "battery"
    ],

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "sort-by-number": true
    },

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d %H:%M:%S}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "interval": 1
    },

    "custom/spotify": {
        "exec": "~/.config/waybar/scripts/scroll_spotify_status.sh",
        "exec-on-event": false,
        "format": "{}",
        "escape": true,
        "on-click": "playerctl -p spotify play-pause"
    },

    "custom/spotify-prev": {
        "format": "Û∞íÆ",
        "on-click": "playerctl -p spotify previous",
        "tooltip": false
    },

    "custom/spotify-play-pause": {
        "exec": "~/.config/waybar/scripts/spotify_play_pause.sh",
        "interval": 1,
        "return-type": "",
        "format": "{}",
        "on-click": "playerctl -p spotify play-pause",
        "tooltip": false
    },

    "custom/spotify-next": {
        "format": "Û∞í≠",
        "on-click": "playerctl -p spotify next",
        "tooltip": false
    },

    "custom/pulseaudio-input": {
        "exec": "~/.config/waybar/scripts/pulseaudio_input.sh",
        "interval": 1,
        "return-type": "",
        "format": "{}",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü Muted",
        "format-icons": {
            "headphone": "üéß",
            "default": ["üï®", "üï©", "üï™"]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "wpctl set-volume -l 1.3 @DEFAULT_AUDIO_SINK@ 2%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-"
    },

    "disk": {
        "format": "/ {percentage_used}%",
        "path": "/"
    },

    "memory": {
        "format": "RAM {percentage}%",
        "interval": 2
    },

    "cpu": {
        "format": "CPU {usage}%",
        "interval": 2
    },

    "network": {
        "interface": "wl*",
        "format-wifi": "{essid}",
        "format-disconnected": "Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
    },

    "battery": {
        "bat": "BAT0",
        "interval": 5,
        "full-at": 99,
        "states": {
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Û∞ÇÑ {capacity}%",
        "format-icons": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    }
}

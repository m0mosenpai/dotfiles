/* Waybar Style - Matching Polybar theme */
/* Colors from polybar: primary=#F0C674, background-alt=#373B41, foreground=#C5C8C6 */

* {
    font-family: "HackNerdFontMono";
    font-size: 10pt;
    min-height: 0;
}

window#waybar {
    background-color: #000000;
    color: #C5C8C6;
}

window#waybar.hidden {
    opacity: 0.2;
}

#workspaces button {
    padding: 0 5px;
    color: #707880;
    background-color: transparent;
    border: none;
    border-radius: 0;
}

#workspaces button:hover {
    background: rgba(0, 0, 0, 0.2);
}

#workspaces button.active {
    background-color: #373B41;
    color: #F0C674;
}

#workspaces button.urgent {
    background-color: #A54242;
}

#clock {
    color: #F0C674;
    padding: 0 5px;
}

#battery,
#cpu,
#memory,
#disk,
#network,
#pulseaudio,
#custom-pulseaudio-input,
#custom-spotify,
#custom-spotify-prev,
#custom-spotify-play-pause,
#custom-spotify-next {
    padding: 0 5px;
    color: #C5C8C6;
}

/* Separator effect between modules */
#battery,
#cpu,
#memory,
#disk,
#network,
#pulseaudio,
#custom-pulseaudio-input,
#custom-spotify {
    border-left: 1px solid #707880;
}

/* Module-specific colors */
#cpu,
#memory,
#disk {
    color: #C5C8C6;
}

label:focus {
    background-color: #000000;
}

#battery.charging, #battery.plugged {
    color: #8ABEB7;
}

#battery.critical:not(.charging) {
    background-color: #A54242;
    color: #C5C8C6;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

@keyframes blink {
    to {
        background-color: #C5C8C6;
        color: #A54242;
    }
}

#network.disconnected {
    color: #707880;
}

#pulseaudio.muted {
    color: #707880;
}

tooltip {
    background-color: #282A2E;
    border: 1px solid #373B41;
    border-radius: 0;
}

tooltip label {
    color: #C5C8C6;
}

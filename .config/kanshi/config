# Kanshi display profiles
# Run `hyprctl monitors all` to see connected outputs and modes

profile laptop {
    output eDP-1 mode 1920x1080@60Hz position 0,0
}

profile us-home {
    output DP-3 mode 2560x1440@75Hz position 0,0
    output eDP-1 mode 1920x1080@60Hz position 2560,0
    exec hyprctl dispatch moveworkspacetomonitor 1 DP-3
    exec hyprctl dispatch moveworkspacetomonitor 2 DP-3
}

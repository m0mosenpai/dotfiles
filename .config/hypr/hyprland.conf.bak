# Hyprland Configuration

#################
### MONITORS  ###
#################

monitor=,preferred,auto,1


###################
### MY PROGRAMS ###
###################

$terminal = ghostty +new-window
$fileManager = dolphin
$menu = wofi --show drun


#################
### AUTOSTART ###
#################

exec-once = waybar
exec-once = hyprpaper
exec-once = hypridle
exec-once = hyprpm reload -n
exec-once = nm-applet
exec-once = kanshi


##############################
### ENVIRONMENT VARIABLES  ###
##############################

env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24

# XDG portals
env = XDG_CURRENT_DESKTOP,Hyprland
env = XDG_SESSION_TYPE,wayland
env = XDG_SESSION_DESKTOP,Hyprland

# Qt
env = QT_QPA_PLATFORM,wayland;xcb
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_AUTO_SCREEN_SCALE_FACTOR,1
env = QT_WAYLAND_DISABLE_WINDOWDECORATION,1

# Firefox
env = MOZ_ENABLE_WAYLAND,1


#####################
### LOOK AND FEEL ###
#####################

general {
    gaps_in = 5
    gaps_out = 5
    border_size = 1

    col.active_border = rgba(d07e00ff)
    col.inactive_border = rgba(595959aa)

    resize_on_border = true
    allow_tearing = false
    layout = hy3
}

decoration {
    rounding = 0

    active_opacity = 1.0
    inactive_opacity = 0.90

    shadow {
        enabled = true
        range = 7
        offset = -7 -7
        render_power = 3
        color = rgba(1a1a1aee)
    }

    blur {
        enabled = true
        size = 3
        passes = 1
        vibrancy = 0.1696
    }
}

animations {
    enabled = true

    bezier = fast, 0.2, 1, 0.3, 1
    animation = windowsIn, 1, 1.5, fast, popin 80%
    animation = windowsOut, 1, 1.5, fast, popin 80%
    animation = fadeIn, 1, 1.5, fast
    animation = fadeOut, 1, 1.5, fast
    animation = windowsMove, 1, 2, fast
    animation = workspaces, 1, 2, fast, fade
    animation = border, 0
    animation = borderangle, 0

    # Layer animations (wofi, etc.)
    animation = layersIn, 1, 1.5, fast, fade
    animation = layersOut, 1, 1.5, fast, fade
    animation = fadeLayersIn, 1, 1.5, fast
    animation = fadeLayersOut, 1, 1.5, fast
}

dwindle {
    pseudotile = true
    preserve_split = true
}

master {
    new_status = master
}

misc {
    force_default_wallpaper = 0
    disable_hyprland_logo = true
    splash_font_family = HackNerdFontMono
}


#############
### INPUT ###
#############

input {
    kb_layout = us
    kb_options = caps:super

    follow_mouse = 1
    sensitivity = 0

    touchpad {
        natural_scroll = true
        tap-to-click = true
    }
}

gesture = 3, horizontal, workspace


####################
### KEYBINDINGS  ###
####################

$mod = SUPER

bind = $mod, Return, exec, $terminal
bind = $mod SHIFT, Q, killactive
bind = $mod, D, exec, $menu
bind = $mod SHIFT, Space, togglefloating
bind = $mod, F, fullscreen
bind = $mod SHIFT, C, exec, hyprctl reload
bind = $mod SHIFT, E, exit
bind = CTRL $mod, L, exec, hyprlock


#######################
### WINDOW NAVIGATION (vim-style) ###
#######################

# Move focus
bind = $mod, H, hy3:movefocus, l
bind = $mod, L, hy3:movefocus, r
bind = $mod, K, hy3:movefocus, u
bind = $mod, J, hy3:movefocus, d

# Arrow key alternatives
bind = $mod, Left, hy3:movefocus, l
bind = $mod, Right, hy3:movefocus, r
bind = $mod, Up, hy3:movefocus, u
bind = $mod, Down, hy3:movefocus, d

# Move windows
bind = $mod SHIFT, H, hy3:movewindow, l
bind = $mod SHIFT, L, hy3:movewindow, r
bind = $mod SHIFT, K, hy3:movewindow, u
bind = $mod SHIFT, J, hy3:movewindow, d

# Arrow key alternatives
bind = $mod SHIFT, Left, hy3:movewindow, l
bind = $mod SHIFT, Right, hy3:movewindow, r
bind = $mod SHIFT, Up, hy3:movewindow, u
bind = $mod SHIFT, Down, hy3:movewindow, d

# Move window to other monitor
bind = $mod CTRL SHIFT, H, movewindow, mon:l
bind = $mod CTRL SHIFT, L, movewindow, mon:r

# Focus parent (approximate with focus cycling)
bind = $mod, A, cyclenext

# Split orientation
bind = $mod, semicolon, layoutmsg, preselect l
bind = $mod, V, layoutmsg, preselect d

# Layout switching
# bind = $mod, S, pseudo
bind = $mod, W, togglesplit
bind = $mod, E, togglesplit
bind = $mod, S, hy3:makegroup, tab
bind = $mod, T, hy3:changegroup, toggletab

plugin {
    hy3 {
        autotile = true

        tabs {
            height = 24
            padding = 0
            border_width = 1
            radius = 1
            render_text = true
            text_font = HackNerdFontMono
            text_height = 9
            text_center = true
            text_padding = 10

            # Active tab (focused window on focused monitor)
            col.active = rgb(000000)
            col.active.border = rgb(d07e00)
            col.active.text = rgb(C5C8C6)

            # Focused tab (other tabs in focused group)
            col.focused = rgb(000000)
            col.focused.border = rgb(d07e00)
            col.focused.text = rgb(C5C8C6)

            # Inactive tabs
            col.inactive = rgb(000000)
            col.inactive.border = rgb(595959)
            col.inactive.text = rgb(707880)

            # Urgent tabs
            col.urgent = rgb(A54242)
            col.urgent.border = rgb(d07e00)
            col.urgent.text = rgb(C5C8C6)
        }
    }
}


#######################
### RESIZE MODE     ###
#######################

# Enter resize submap
bind = $mod, R, submap, resize

submap = resize

binde = , H, resizeactive, -30 0
binde = , L, resizeactive, 30 0
binde = , K, resizeactive, 0 -30
binde = , J, resizeactive, 0 30
binde = , Left, resizeactive, -30 0
binde = , Right, resizeactive, 30 0
binde = , Up, resizeactive, 0 -30
binde = , Down, resizeactive, 0 30

# Exit resize mode
bind = , Return, submap, reset
bind = , Escape, submap, reset
bind = $mod, R, submap, reset

submap = reset


#################
### WORKSPACES ###
#################

# Switch to workspace
bind = $mod, 1, workspace, 1
bind = $mod, 2, workspace, 2
bind = $mod, 3, workspace, 3
bind = $mod, 4, workspace, 4
bind = $mod, 5, workspace, 5
bind = $mod, 6, workspace, 6
bind = $mod, 7, workspace, 7
bind = $mod, 8, workspace, 8
bind = $mod, 9, workspace, 9
bind = $mod, 0, workspace, 10

# Move window to workspace
bind = $mod SHIFT, 1, movetoworkspace, 1
bind = $mod SHIFT, 2, movetoworkspace, 2
bind = $mod SHIFT, 3, movetoworkspace, 3
bind = $mod SHIFT, 4, movetoworkspace, 4
bind = $mod SHIFT, 5, movetoworkspace, 5
bind = $mod SHIFT, 6, movetoworkspace, 6
bind = $mod SHIFT, 7, movetoworkspace, 7
bind = $mod SHIFT, 8, movetoworkspace, 8
bind = $mod SHIFT, 9, movetoworkspace, 9
bind = $mod SHIFT, 0, movetoworkspace, 10

# Scroll through workspaces
bind = $mod, mouse_down, workspace, e+1
bind = $mod, mouse_up, workspace, e-1


################
### MEDIA KEYS ###
################

bindel = , XF86AudioRaiseVolume, exec, wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 2%+
bindel = , XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-
bindl = , XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindl = , XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPrev, exec, playerctl previous
bindel = , XF86MonBrightnessUp, exec, light -A 5
bindel = , XF86MonBrightnessDown, exec, light -U 5


###################
### SCREENSHOTS ###
###################

bind = CTRL, Print, exec, grim - | wl-copy
bind = CTRL SHIFT, Print, exec, grim -g "$(slurp)" - | wl-copy


#####################
### WINDOW RULES  ###
#####################

# 1 - Browser, 2 - Terminal, 3 - Spotify
windowrulev2 = workspace 1, class:^(firefox)$
windowrulev2 = workspace 2, class:^(com.mitchellh.ghostty)$
windowrulev2 = workspace 3, class:Spotify
windowrulev2 = noshadow, title:^(cpt_frame_xcb_window)$

# Zoom windows float
windowrulev2 = float, class:^(zoom)$
windowrulev2 = float, class:^(Zoom)$
windowrulev2 = float, title:^(.*join\?action=join.*)$

# Firefox PiP
windowrulev2 = float, title:^(Picture-in-Picture)$
windowrulev2 = pin, title:^(Picture-in-Picture)$

# Firefox - float all, then tile main windows
windowrulev2 = float, class:^(firefox)$
windowrulev2 = tile, title:^(.* â€” Mozilla Firefox)$
windowrulev2 = tile, title:^(Mozilla Firefox)$
windowrulev2 = tile, title:^(Mozilla Firefox Private Browsing)$


#######################
### MOUSE BINDINGS  ###
#######################

# Move/resize windows with mod + mouse
bindm = $mod, mouse:272, hy3:movewindow
bindm = $mod, mouse:273, resizewindow
